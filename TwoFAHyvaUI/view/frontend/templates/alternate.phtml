                                // For SMS - extract phone from response if available
                                const phone = (typeof data[0] === 'object' && data[0].phone) ? data[0].phone : '';
                                const maskedPhone = phone ? 'xxxxxxxxxx' + phone.slice(-2) : 'xxxxxxxxxx92';
                                message = 'The OTP has been sent to ' + maskedPhone + '. Please enter the OTP you received to Validate.';
                            }
                        }
                        
                        if (method === 'OOE') {
                            redirectUrl = baseUrl + '?mooption=invokeInline&step=OOEMethodValidation&savestep=OOE&message=' + encodeURIComponent(message) + '&showdiv=showdiv';
                        } else if (method === 'OOS') {
                            // For SMS, include phone and countrycode if available
                            const phone = (typeof data[0] === 'object' && data[0].phone) ? data[0].phone : '';
                            const countrycode = (typeof data[0] === 'object' && data[0].countrycode) ? data[0].countrycode : '';
                            let urlParams = '?mooption=invokeInline&step=OOSMethodValidation&savestep=OOS&message=' + encodeURIComponent(message);
                            if (phone) urlParams += '&phone=' + encodeURIComponent(phone);
                            if (countrycode) urlParams += '&countrycode=' + encodeURIComponent(countrycode);
                            urlParams += '&active_method=OOS&email=' + encodeURIComponent(email);
                            redirectUrl = baseUrl + urlParams;
                        }
