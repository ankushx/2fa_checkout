        document.addEventListener('DOMContentLoaded', function () {
            const passcodeInputs = document.querySelectorAll('#moPass input[type="text"]');
            const passcodeHiddenInput = document.getElementById('Passcode');

            // Function to update the hidden Passcode field
            function updatePasscode() {
                let passcode = '';
                passcodeInputs.forEach(input => {
                    passcode += input.value.trim(); // Trim any accidental spaces
                });
                passcodeHiddenInput.value = passcode;
            }

            // Add event listeners to all passcode inputs
            passcodeInputs.forEach((input, index) => {
                input.addEventListener('input', () => {
                    updatePasscode();

                    // Auto-focus on the next input field when typing
                    if (input.value.length === input.maxLength && index + 1 < passcodeInputs.length) {
                        passcodeInputs[index + 1].focus();
                    }
                });

                input.addEventListener('paste', (event) => {
                    event.preventDefault();
                    const pasteData = event.clipboardData.getData('text').trim();
                    const pasteChars = pasteData.split('');

                    for (let i = 0; i < pasteChars.length; i++) {
                        if (index + i < passcodeInputs.length) {
                            passcodeInputs[index + i].value = pasteChars[i];
                        }
                    }

                    updatePasscode();
                });

                // Handle Backspace key to move focus backward
                input.addEventListener('keydown', (event) => {
                    if (event.key === 'Backspace' && input.value === '' && index > 0) {
                        passcodeInputs[index - 1].focus();
                    }
                });

                // Handle arrow key navigation between inputs
                input.addEventListener('keydown', (event) => {
                    if (event.key === 'ArrowLeft' && index > 0) {
                        passcodeInputs[index - 1].focus();
                    } else if (event.key === 'ArrowRight' && index + 1 < passcodeInputs.length) {
                        passcodeInputs[index + 1].focus();
                    }
                });
            });
        });

     
