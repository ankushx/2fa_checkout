            const requestData = {
                username: email,
                authType: method,
                phone: '' // Will be set for OOS if phone is provided
            };
            
            fetch(apiUrl, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(requestData)
            })
            .then(response => response.json())
            .then(data => {
                let message = '';
                let redirectUrl = '';
                console.log(data);
                
                if (Array.isArray(data) && data.length > 0) {
                    // Handle array format: ['ERROR', 'message'] or ['SUCCESS', 'message']
                    // OR object format: [{status: 'SUCCESS', message: '...'}]
                    let status = '';
                    let responseMessage = '';
                    
                    // Check if first element is a string (array format) or object (object format)
                    if (typeof data[0] === 'string') {
                        // Array format: ['ERROR', 'message'] or ['SUCCESS', 'message']
                        status = data[0];
                        responseMessage = data[1] || '';
                    } else if (typeof data[0] === 'object' && data[0] !== null) {
                        // Object format: [{status: 'SUCCESS', message: '...'}]
                        status = data[0].status || '';
                        responseMessage = data[0].message || '';
                    }
                    
                    if (status === "SUCCESS") {
                        // Success - get message from response or use default
                        if (responseMessage) {
                            message = responseMessage;
                        } else {
                            // For email
                            if (method === 'OOE') {
                                message = 'The OTP has been sent to ' + email.replace(/(.{2})(.*)(@.*)/, '$1xxxxxxxt$3') + '. Please enter the OTP you received to Validate.';
