                        // Error case - redirect with error
                        message = responseMessage || "Échec de l'envoi d'OTP. Veuillez réessayer.";
                        if (method === 'OOE') {
                            redirectUrl = baseUrl + '?mooption=invokeInline&step=OOEMethodValidation&message=' + encodeURIComponent(message) + '&error=1';
                        } else if (method === 'OOS') {
                            redirectUrl = baseUrl + '?mooption=invokeInline&step=OOSMethodValidation&message=' + encodeURIComponent(message) + '&error=1';
