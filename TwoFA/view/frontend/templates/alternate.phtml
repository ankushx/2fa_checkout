        document.addEventListener('DOMContentLoaded', function () {
            const resendOtpButton = document.querySelector('.resend-link');
            const loader = document.createElement('div'); // Create a loader element
            loader.className = 'loader'; // You can customize the loader with CSS
            loader.style.display = 'none'; // Initially hidden

            // Add the loader to the body or a specific container
            document.body.appendChild(loader);

            if (resendOtpButton) {

                resendOtpButton.addEventListener('click', function (event) {
                    event.preventDefault();

                    // Get URL parameters
                    const urlParams = new URLSearchParams(window.location.search);

                    // Initialize variables
                    let activeMethod = '';
                    let username = '<?php echo $email; ?>'; // This will store email or phone number
                    let phone = ''; // Phone number including country code
                    const countryCode = urlParams.get('countrycode') || ''; // Get country code

                    // Edge Case 1: OOS Method (Step: OOSMethodValidation)
                    if (urlParams.get('step') === 'OOSMethodValidation') {
                        activeMethod = 'OOS';
                        phone = '+' + countryCode + urlParams.get('phone'); // Phone number with country code
                    }
                    // Edge Case 2: OOSE Method (Step: OOSEMethodValidation)
                    else if (urlParams.get('step') === 'OOSEMethodValidation') {
                        activeMethod = 'OOSE';
                        phone = '+' + countryCode + urlParams.get('phone'); // Phone number with country code
                    }
                    // Edge Case 3: OOE Method (Step: OOEMethodValidation)
                    else if (urlParams.get('step') === 'OOEMethodValidation') {
                        activeMethod = 'OOE';
                        phone = ''; // No phone in this case
                    }
                    // Edge Case 4: OTP Sent to Email (InvokeTFA case)
                    else {
                        // Try to get the active method from URL parameters or determine it from the context
                        activeMethod = urlParams.get('active_method') || '';
                        
                        // If no active_method in URL, try to determine from the context
                        if (!activeMethod) {
                            // Check if we're in a specific step that indicates the method
                            const step = urlParams.get('step');
                            if (step === 'OOSMethodValidation') {
                                activeMethod = 'OOS';
                            } else if (step === 'OOEMethodValidation') {
                                activeMethod = 'OOE';
                            } else if (step === 'OOSEMethodValidation') {
                                activeMethod = 'OOSE';
                            } else {
                                // Default to OOE for email-based OTP if no other method is specified
                                activeMethod = 'OOE';
                            }
                        }
                        
                        phone = ''; // No phone in this case

                        // Function to clean up the URL for the "else" case
                        function cleanUrl() {
                            const currentUrl = new URL(window.location.href);

                            // Extract the pathname and remove any unwanted "message/" segment
                            let cleanedPathname = currentUrl.pathname.replace(/message\/[^\/]+\/$/, '');

                            // Update the URL with the cleaned pathname and keep the query parameters intact
                            currentUrl.pathname = cleanedPathname;

                            // Update the browser's URL without reloading the page
                            window.history.pushState({}, '', currentUrl);
                        }

                        // Clean the URL on page load
                        cleanUrl();
                    }

                    // Default case for sending OTP
                    const requestData = {
                        username: username, // Will be email or phone number depending on the case
                        authType: activeMethod, // Active method based on the case
                        phone: phone // Phone number with country code (if applicable)
                    };

                    // console.log(requestData, "-------");
                    const apiUrl = '<?php echo $this->getBaseUrl(); ?>rest/V1/mo2fa/headless/sendOtpApi';

                    resendOtpButton.disabled = true;

                    fetch(apiUrl, {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify(requestData)
                    })
                        .then(response => {
                            // Check if the response is JSON
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                return response.json();
                            } else {
                                throw new Error('Invalid response format: Expected JSON');
                            }
                        })
                        .then(data => {
                            // Check if `data` is an array and has at least one element
                            if (Array.isArray(data) && data.length > 0) {
                                const responseData = data[0]; // Access the first object in the array
                                console.log(responseData);
                                // alert(responseData.status);
                                // Check the status and update the URL with the appropriate message
                                let newMessage = '';
                                if (responseData.status === "SUCCESS") {
                                    newMessage = 'OTP has been resend successfully!';
                                } else {
                                    newMessage = responseData.message;
                                }

                                // Update the URL by removing the `error` parameter (if present) and adding/updating the `message` parameter
                                const currentUrl = new URL(window.location.href);

                                // Conditionally remove the `error` parameter only if it exists
                                if (currentUrl.searchParams.has('error')) {
                                    currentUrl.searchParams.delete('error'); // Remove the `error` parameter
                                }

                                currentUrl.searchParams.set('message', newMessage); // Update the `message` parameter
                                
                                // Ensure the active_method is preserved in the URL for proper OTP length determination
                                if (activeMethod && !currentUrl.searchParams.has('active_method')) {
                                    currentUrl.searchParams.set('active_method', activeMethod);
                                }

                                // Update the URL without reloading the page
                                window.history.pushState({}, '', currentUrl);

                                // Refresh the page to display the updated message
                                window.location.reload();
                            } else {
                                alert('Invalid response format from the server.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('An error occurred: ' + error.message);
                        })
                        .finally(() => {
                            resendOtpButton.textContent = 'Resend Code';
                            resendOtpButton.disabled = false;

                            // Hide the loader after the process is done
                            loader.style.display = 'none';
                        });
                });
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            const passcodeInputs = document.querySelectorAll('#moPass input[type="text"]');
            const passcodeHiddenInput = document.getElementById('Passcode');

            // Function to update the hidden Passcode field
            function updatePasscode() {
                let passcode = '';
                passcodeInputs.forEach(input => {
                    passcode += input.value.trim(); // Trim any accidental spaces
                });
                passcodeHiddenInput.value = passcode;
            }

            // Add event listeners to all passcode inputs
            passcodeInputs.forEach((input, index) => {
                input.addEventListener('input', () => {
                    updatePasscode();

                    // Auto-focus on the next input field when typing
                    if (input.value.length === input.maxLength && index + 1 < passcodeInputs.length) {
                        passcodeInputs[index + 1].focus();
                    }
                });

                input.addEventListener('paste', (event) => {
                    event.preventDefault();
                    const pasteData = event.clipboardData.getData('text').trim();
                    const pasteChars = pasteData.split('');

                    for (let i = 0; i < pasteChars.length; i++) {
                        if (index + i < passcodeInputs.length) {
                            passcodeInputs[index + i].value = pasteChars[i];
                        }
                    }

                    updatePasscode();
                });

                // Handle Backspace key to move focus backward
                input.addEventListener('keydown', (event) => {
                    if (event.key === 'Backspace' && input.value === '' && index > 0) {
                        passcodeInputs[index - 1].focus();
                    }
                });

                // Handle arrow key navigation between inputs
                input.addEventListener('keydown', (event) => {
                    if (event.key === 'ArrowLeft' && index > 0) {
                        passcodeInputs[index - 1].focus();
                    } else if (event.key === 'ArrowRight' && index + 1 < passcodeInputs.length) {
                        passcodeInputs[index + 1].focus();
                    }
                });
            });
        });

     
</script>
