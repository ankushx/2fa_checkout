        paginationInfo.textContent = `Showing ${startIndex + 1} to ${Math.min(endIndex, users.length)} of ${users.length} entries`;

        // Handle next/prev buttons visibility
        document.getElementById('prevBtn').disabled = currentPage === 1;
        document.getElementById('nextBtn').disabled = currentPage * entriesPerPage >= users.length;
    }

    function prevPage() {
        if (currentPage > 1) {
            currentPage--;
            renderTable();
        }
    }

    function nextPage() {
        if (currentPage * entriesPerPage < users.length) {
            currentPage++;
            renderTable();
        }
    }

    function searchUsers() {
        const searchTerm = document.getElementById('searchInput').value.trim();
        
        // If search is empty, show all users immediately
        if (!searchTerm) {
            currentPage = 1;
            renderTable();
            return;
        }
        
        // Require minimum 2 characters before searching
        if (searchTerm.length < 2) {
            return;
        }
        
        const searchTermLower = searchTerm.toLowerCase();
        
        // Remove "+" prefix from search term for comparison (if present)
        const searchTermWithoutPlus = searchTermLower.replace(/^\+/, '');
        
        const filteredUsers = users.filter(user => {
            // Search by username (existing functionality - keep partial match)
            const matchesUsername = (user.username || '').toLowerCase().includes(searchTermLower);
            
            // Only check phone number if search term looks like a phone number (contains digits)
            // This prevents unnecessary phone checks when searching by username
            const isPhoneSearch = /[\d+]/.test(searchTermLower);
            
            let matchesPhoneNumber = false;
            
            if (isPhoneSearch) {
                // Get phone and countrycode values, handle null/empty
                const phone = (user.phone || '').toString();
                const countrycode = (user.countrycode || '').toString();
                
                // Create combined phone number
                let combinedPhone = '';
                if (phone && countrycode) {
                    combinedPhone = countrycode + phone;
                } else if (phone) {
                    combinedPhone = phone;
                } else if (countrycode) {
                    combinedPhone = countrycode;
                }
                
                // Remove "+" from combined phone for comparison
                const combinedPhoneWithoutPlus = combinedPhone.replace(/^\+/, '').toLowerCase();
                
                // Only exact match on full phone number (optimized for performance)
                // This matches: "+33619275625" or "33619275625" against combined phone
                matchesPhoneNumber = combinedPhoneWithoutPlus === searchTermWithoutPlus;
            }
            
            // Return true if username matches OR full phone number matches
            return matchesUsername || matchesPhoneNumber;
        });
        
        // Reset to page 1 when searching
        currentPage = 1;
        renderFilteredTable(filteredUsers);
    }

