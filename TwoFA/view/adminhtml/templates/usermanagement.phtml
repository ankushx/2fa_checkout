            // Hide the modal after submission
            modal.classList.add('hidden');

            // Re-enable scrolling
            document.body.style.overflow = 'auto';
        };

        // When user clicks 'Cancel'
        cancelBtn.onclick = function () {
            // Close the modal without submitting the form
            modal.classList.add('hidden');

            // Re-enable scrolling
        };
    }


